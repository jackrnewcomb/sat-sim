{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "SIMCORE_BUILD_TESTS": "ON",
        "SIMCORE_BUILD_SHARED": "OFF"
      }
    },

    {
      "name": "ninja-debug",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "ninja-release",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },

    {
      "name": "vs-debug",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    },
    {
      "name": "vs-release",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    }
  ],

  "buildPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },

    {
      "name": "vs-debug",
      "configurePreset": "vs-debug",
      "configuration": "Debug"
    },
    {
      "name": "vs-release",
      "configurePreset": "vs-release",
      "configuration": "Release"
    }
  ],

  "testPresets": [
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "vs-debug",
      "configurePreset": "vs-debug",
      "configuration": "Debug"
    }
  ]
}